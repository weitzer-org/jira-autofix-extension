{
  "name": "jira-autofix",
  "version": "0.1.0",
  "description": "Automates resolving Jira issues â€” from reading the ticket to opening a pull request with the fix",
  "contextFileName": "GEMINI.md",
  "mcpServers": {
    "atlassian": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "JIRA_URL",
        "-e",
        "JIRA_EMAIL",
        "-e",
        "JIRA_API_TOKEN",
        "ghcr.io/modelcontextprotocol/servers/jira"
      ],
      "env": {
        "JIRA_URL": "$JIRA_URL",
        "JIRA_EMAIL": "$JIRA_EMAIL",
        "JIRA_API_TOKEN": "$JIRA_API_TOKEN"
      }
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "-e",
        "GITHUB_TOOLSETS",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "$GITHUB_PERSONAL_ACCESS_TOKEN",
        "GITHUB_TOOLSETS": "repos,pull_requests,context"
      }
    }
  },
  "prompts": {
    "jira-autofix": "commands/jira-autofix.toml"
  },
  "settings": [
    {
      "name": "GitHub Personal Access Token",
      "description": "GitHub PAT with 'repo' scope for creating branches and pull requests",
      "envVar": "GITHUB_PERSONAL_ACCESS_TOKEN",
      "sensitive": false
    },
    {
      "name": "Jira URL",
      "description": "Your Jira instance URL (e.g. https://myorg.atlassian.net)",
      "envVar": "JIRA_URL",
      "sensitive": false
    },
    {
      "name": "Jira Email",
      "description": "Email address associated with your Jira account",
      "envVar": "JIRA_EMAIL",
      "sensitive": false
    },
    {
      "name": "Jira API Token",
      "description": "Jira API Token (create at https://id.atlassian.com/manage-profile/security/api-tokens)",
      "envVar": "JIRA_API_TOKEN",
      "sensitive": true
    }
  ]
}